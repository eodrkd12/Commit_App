<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
            android:text="중복확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_nickname" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_birthday" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_email" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="닉네임"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_nickname"
            app:layout_constraintTop_toBottomOf="@+id/text_birthday" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_email" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            app:layout_constraintVertical_bias="0.492"/>
    <TextView
            android:text="e_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_email" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_nickname" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_confirm" app:layout_constraintVertical_bias="0.401"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_nickname" app:layout_constraintStart_toEndOf="@+id/text_nickname"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_nickname" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_birthday" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_pw_check" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/group_gender" app:layout_constraintVertical_bias="0.819"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_name" app:layout_constraintStart_toEndOf="@+id/text_name"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_pw_check"/>
    <TextView
            android:text="PW확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pw_check"
            app:layout_constraintTop_toBottomOf="@+id/text_pw"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edit_name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_pw_check"
            app:layout_constraintTop_toBottomOf="@+id/edit_pw" app:layout_constraintStart_toEndOf="@+id/text_pw_check"
            android:layout_marginStart="32dp" android:layout_marginLeft="32dp" android:layout_marginTop="20dp"/>
    <TextView
            android:text="PW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pw"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_pw_check" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_id" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="36dp" android:layout_marginStart="36dp"
            app:layout_constraintVertical_bias="0.63"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_logo"
            android:text="LOGO"
            android:textSize="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" android:layout_marginTop="16dp"/>
    <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_id" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edit_id" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edit_pw"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/edit_id"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_id"
            app:layout_constraintEnd_toStartOf="@+id/btn_id"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/text_logo"/>
    <Button
            android:text="중복확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_id"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_pw" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_pw" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_id" app:layout_constraintStart_toEndOf="@+id/text_pw"
            android:layout_marginStart="36dp" android:layout_marginLeft="36dp"/>
    <TextView
            android:text="성별"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_gender" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_name" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/edit_birthday" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintVertical_bias="0.625"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/group_gender"
            android:checkedButton="@id/radio_male" android:orientation="horizontal" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_name" app:layout_constraintStart_toEndOf="@+id/text_gender"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.36"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/edit_birthday">
        <RadioButton
                android:text="남"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radio_male" android:layout_weight="1"/>
        <RadioButton
                android:text="여"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/radio_female" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="생년월일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_birthday"
            app:layout_constraintTop_toBottomOf="@+id/text_gender"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/edit_birthday"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintVertical_bias="0.733"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/edit_birthday" app:layout_constraintStart_toEndOf="@+id/text_birthday"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintTop_toBottomOf="@id/group_gender"
            android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/edit_email" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_confirm" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_nickname" app:layout_constraintVertical_bias="0.058"
            app:layout_constraintStart_toEndOf="@+id/text_email" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.178"/>
    <Button
            android:text="다음"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_confirm" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>