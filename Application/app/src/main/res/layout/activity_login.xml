<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_logo"
            android:text="LOGO"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/edit_id"
    />

    <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_아이디"
            app:layout_constraintTop_toTopOf="@id/text_logo"
            app:layout_constraintBottom_toTopOf="@id/text_pw"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/edit_id"
            app:layout_constraintHorizontal_bias="0.48" app:layout_constraintVertical_bias="0.49"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_id"
            android:ems="8"
            app:layout_constraintTop_toTopOf="@id/text_logo"
            app:layout_constraintBottom_toTopOf="@id/edit_pw"
            app:layout_constraintLeft_toRightOf="@id/text_아이디"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="76dp"/>

    <TextView
            android:text="PW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_pw"
            app:layout_constraintTop_toBottomOf="@id/text_아이디"
            app:layout_constraintBottom_toTopOf="@id/btn_login"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/edit_pw"
            android:layout_marginBottom="96dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/edit_pw"
            android:ems="8"
            app:layout_constraintTop_toBottomOf="@id/edit_id"
            app:layout_constraintBottom_toTopOf="@id/btn_login"
            app:layout_constraintLeft_toRightOf="@id/text_pw"
            app:layout_constraintRight_toRightOf="parent"
    />

    <Button
            android:text="로그인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_login"
            app:layout_constraintTop_toBottomOf="@id/edit_pw"
            app:layout_constraintBottom_toTopOf="@id/text_find"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
            android:text="아이디/비밀번호 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_find"
            app:layout_constraintTop_toBottomOf="@id/btn_login"
            app:layout_constraintBottom_toBottomOf="@id/text_guide"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />
    <TextView
            android:text="도움말"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_guide"
            app:layout_constraintTop_toBottomOf="@id/text_find"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
    />

</android.support.constraint.ConstraintLayout>